<%= form_for(@word, url: admin_category_words_path) do |f| %>
<div class="update-info">
    <div class="content">
        <%= render 'layouts/error', object: @word %>
        <div class="form-group word">
            <label for="inputWord">Word</label>
            <div><%= f.text_field :content, class: "form-control" %></div>
        </div>
        <div class="choice">
            <p>Choice</p>
            <small class="form-group form-text text-muted">please input 3 words and check the correct answer.</small>
            <%= f.fields_for :choices do |s| %>
                <div class="form-group choice-form">
                    <%= s.text_field :content, class: "form-control choice-text" %>
                    <!-- â†“ s.radio_button doesnt work, so its a solution for it -->
                    <div class="choice-radio"><%= f.radio_button :correct_no, s.index, checked: s.object.is_correct ? true : false %></div>
                </div>
            <% end %>
        </div>
        <% if object == "add" %>
            <div class="add-btn"><span><%= f.submit "add" %></span></div>
        <% else %>
            <div class="edit-btn"><span><%= f.submit "edit" %></span></div>
        <% end %>
    </div>
</div>
<% end %>