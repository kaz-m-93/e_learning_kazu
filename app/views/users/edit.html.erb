<% provide(:title, "settings") %>
<div class="container clearfix">
    <%= form_for(@user) do |f| %>
        <div class="update-info">
            <%= render 'layouts/error', object: @user %>
            <div class="form-group">
                <label for="inputEmail4">Name</label>
                <div><%= f.text_field :name, class: "form-control" %></div>
            </div>
            <div class="form-group">
                <label for="inputEmail4">Email</label>
                <div><%= f.email_field :email, class: "form-control" %></div>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <div><%= f.password_field :password, class: "form-control" %></div>
            </div>
            <div class="form-group">
                <label for="inputPassword">Password Confirmation</label>
                <div><%= f.password_field :password_confirmation, class: "form-control" %></div>
            </div>
            <div class="form-group">
                <label for="exampleFormControlFile1">Picture</label>
                <%= f.file_field :picture, class: "form-control-file", accept: 'image/jpeg, image/png' %>
                <small id="emailHelp" class="form-text text-muted">please select the extention only 'jpeg' or 'png'.</small>
            </div>
            <div class="btn"><span><%= f.submit "update" %></span></div>
        </div>
    <% end %>
</div>
