<% provide(:title, "profile") %>
<div class="user-wrapper">
    <div class="container clearfix">
        <div class="left-side">
            <div class="user" style="max-width: 18rem;">
                <%= image_tag get_userimage(@user) %>
                <div class="info">
                    <h2 class="name"><%= @user.name || "no name" %></h2>
                    <p class="email"><%= @user.email %></p>
                </div>
                <p>xx words learned</p>
                <div class="follow-form clearfix">
                    <div class="follow">
                        follow
                        <p>xx</p>
                    </div>
                    <div class="follower">
                        follower
                        <p>xx</p>
                    </div>
                </div>
                <% if login_user? %>
                    <div class="user-btn"><%= link_to "settings", edit_user_url(@user) %></div>
                <% else %>
                <div class="user-btn"><%= link_to "follow", '#' %></div>
                <% end %>
            </div>
        </div>
        <div class="right-side">
            <div class="activity">
                <h2><%= "#{@user.name}'s " if @user.name %>activities</h2>
                <div class="item">
                </div>
            </div>
        </div>
    </div>
</div>