<% if flash.any? %>
    <% if flash[:success] != nil %>
        <div class="alert alert-success" role="alert">
            <%= flash[:success] %>
        </div>
    <% elsif flash[:danger] != nil %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:danger] %>
        </div>
    <% elsif flash[:info] != nil %>
        <div class="alert alert-info" role="alert">
            <%= flash[:info] %>
        </div>
    <% end %>
<% end %>