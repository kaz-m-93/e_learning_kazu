<header>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <%= link_to "E-learning", root_url, class:"navbar-brand" %>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto nav-fill">
                <% if login_user.nil? %>
                    <li class="nav-item">
                        <%= link_to "Sign Up", signup_url, class:"nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Log In", login_url, class: "nav-link" %>
                    </li>
                <% else %>
                    <li class="nav-item">
                        <%= link_to "Dashboard", dashboard_url, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Users", users_url, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Categories", categories_url, class: "nav-link" %>
                    </li>
                    <% if admin_user?(login_user) %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <%= link_to "Categories", admin_categories_url, class: "dropdown-item" %>
                            </div>
                        </li>
                    <% end %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            <%= image_tag get_userimage(login_user), style: "height: 25px;" %>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <%= link_to "Profile", user_url(login_user), class: "dropdown-item" %>
                            <%= link_to "Settings", edit_user_url(login_user), class: "dropdown-item" %>
                            <div class="dropdown-divider"></div>
                            <%= link_to "Log Out", logout_url, method: :delete, class: "dropdown-item" %>
                        </div>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>
</header>